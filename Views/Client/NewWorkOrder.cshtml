@model intex.Models.AddWorkOrder

@{
    ViewBag.Title = "NewWorkOrder";
}

<h2>NewWorkOrder</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AddWorkOrder</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.AssayID, "AssayID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AssayID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AssayID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Assay" class="btn btn-default" />
                @Html.ActionLink("Finish Order", "OrderConf", "Client", null, new { @class = "btn btn-default"})
            </div>
        </div>

        <div>
            <p style="font-style: italic; font-size: larger" class="text-success">@ViewBag.Message</p>
        </div>
    </div>
}

